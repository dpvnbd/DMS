@model DMS.Application.DTOs.Documents.DocumentSummaryDto

@{
    ViewData["Title"] = "Delete document";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            Author
        </dt>
        <dd>
            <a asp-action="Details" asp-controller="User" asp-route-id="@Model.Author.Id"><user-badge user="@Model.Author" /></a>
        </dd>
        <dt>
            Review stage
        </dt>
        <dd>
            <document-status-badge status="@Model.CurrentStatus" />
        </dd>
    </dl>

    <form asp-action="Delete">
        @Html.Hidden("id", Model.Id)
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Details" asp-route-id="@Model.Id">Back to document details</a>
    </form>
</div>
